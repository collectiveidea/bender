<%= errors_for(@user) %>

<%= form_for @user, url: admin_user_path(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :rfid, "RFID" %>
  <%= f.text_field :rfid %>

  <%= f.label :credits, "Fluid oz" %>
  <%= f.number_field :credits, step: :any %>

  <%= f.label :hidden, "Hide" %>
  <%= f.checkbox :hidden %>

  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', :back, :cliass => 'btn btn-default' %>
  </div>
<% end %>
